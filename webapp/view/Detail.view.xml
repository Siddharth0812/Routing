<mvc:View controllerName="com.airdit.Routing.controller.Detail" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:F="sap.ui.layout.form">
	<Page title="Detail View" showNavButton="true" navButtonPress="onBack">
		<ObjectHeader title="{name}" intro="{healthBenefit}" number="{price}" numberUnit="{curr}" icon="{image}"></ObjectHeader>
		
		<IconTabBar>
			<items>
				<IconTabFilter key="idDetails" text="More Details" icon="sap-icon://hint">
					<Panel headerText="Product Details"></Panel>
					<F:SimpleForm>
						<Label text="Product Name"/>
						<Text text="{name}"></Text>
						<Label text="Product Color"/>
						<Text text="{color}"></Text>
						<Label text="Product Size"/>
						<Text text="{size}"></Text>
						<Label text="Product Price"/>
						<Text text="{price}"></Text>
						<Label text="Product Currency"/>
						<Text text="{curr}"></Text>
						<Label text="Health Benefits"/>
						<Text text="{healthBenefit}"></Text>
						<Label text="Product Season"/>
						<Text text="{season}"></Text>
					</F:SimpleForm>
				</IconTabFilter>
				<IconTabFilter key="idSuppliers" text="Suppliers" icon="sap-icon://customer">
					<SearchField id="detailSearch" liveChange="onSearch1"></SearchField>
					<Table id="MobileTable" items="{path:'/supplier', sorter:{path: 'noOfStores'}}">
						<columns>
							<Column>
								<Text text="Name"/>
							</Column>
							<Column>
								<Text text="Since When"/>
							</Column>
							<Column minScreenWidth="Tablet" demandPopin="true">
								<Text text="Contact Number"/>
							</Column>
							<Column hAlign="Right" minScreenWidth="Tablet">
								<Text text="Person"/>
							</Column>
							<Column hAlign="End" minScreenWidth="Tablet">
								<Text text="Number Of Stores"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{name}"/>
									<Text text="{sinceWhen}"/>
									<Text text="{contactNo}"/>
									<Text text="{person}"/>
									<Text text="{noOfStores}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</IconTabFilter>
				<IconTabFilter key="idCities" text="Cities" icon="sap-icon://home">
					<ComboBox id="idCombox" items="{/cities}">
                        <items>
                            <core:Item key="{name}" text="{name}" />
                        </items>
                    </ComboBox>
				</IconTabFilter>
			</items>
		</IconTabBar>
	</Page>
</mvc:View>